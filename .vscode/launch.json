{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django Debug",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "8000"],
      "django": true,
      "justMyCode": true,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "kill-django-server",
      "postDebugTask": "run-django-server",
      "env": {
        "DJANGO_SETTINGS_MODULE": "backend.settings"
      }
    }
  ]
}
